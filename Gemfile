source 'https://rubygems.org'

gem 'rails'
gem 'strong_parameters'
gem 'instagram'
gem 'twilio-ruby'
gem 'jquery-rails'


group :development do
	gem 'sqlite3'
end

group :development, :test do
	gem 'rspec-rails'
	gem 'factory_girl_rails'
end

group :test do
	gem 'capybara'
	gem 'database_cleaner'
	gem 'guard-rspec'
	gem 'spork'
	gem 'guard-spork'
	gem 'rb-fsevent'
	gem 'growl'
end

group :production do
	gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'bootstrap-sass'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end
