<!DOCTYPE html>
<html>
  <head>
    <title>Instatext</title>
    <%= stylesheet_link_tag "application", media: :all %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "Instatext", root_path, class: "brand" %>
          <nav>
            <ul class="nav pull-right">
              <li class="active"><a href="#masthead">Prefs</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>

      <footer>
        <p><%= debug(params) %></p>
        <p>&copy; Ryan Ringler 2013</p>
      </footer>
    </div>
  </body>
</html>