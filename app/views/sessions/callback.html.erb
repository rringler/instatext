<h1>Sessions#callback</h1>

<h3>Almost done.</h3>

<p>Awesome.  Now let's get a phone number so we can text you when someone posts.</p>

<%= form_for :user, url: sessions_path(:create, access_token: @access_token),
									  html: { class: "form-horizontal" } do |f| %>
  <div class="control-group">
	  <%= f.label :phone, class: "control-label" %>
	  <div class="controls">
		  <%= f.text_field :phone %>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<%= link_to "Ok", sessions_path(:create), class: "btn btn-primary" %>
		</div>
	</div>
<% end %>