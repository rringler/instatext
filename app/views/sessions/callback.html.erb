<h1>Sessions#callback</h1>

<h3>Let's connect to Instagram.</h3>

<p>Awesome.  Now let's get a phone number so we can text you when someone posts.</p>

<%= link_to "Ok", sessions_path(:connect), class: "btn btn-primary" %>

redirect_to controller: 'feed', action: 'index'

<%= form_for(resource, :as => resource_name,
											 :url => user_path(resource_name),
											 html: { class: "form-horizontal" }) do |f| %>
  <div class="control-group">
	  <%= f.label :phone, class: "control-label" %>
	  <div class="controls">
		  <%= f.email_field :phone %>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<%= link_to "Ok", new_user_path(resource_name), class: "btn btn-primary" %>
		</div>
	</div>
<% end %>